<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/channel_icon"
        android:layout_width="55.0dip"
        android:layout_height="55.0dip"
        android:layout_centerVertical="true"
        android:layout_margin="10.0dip"
         />

    <ImageView
        android:id="@+id/recommend_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip"
        android:src="@drawable/ic_channel_recommend_label" />

    <TextView
        android:id="@+id/action_btn"
        android:layout_width="55.0dip"
        android:layout_height="30.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/bg_subscribe_btn"
        android:gravity="center"
        android:text="订阅"
        android:textColor="@color/s3"
        android:textSize="14.0sp" />

    <LinearLayout
        android:id="@+id/channel_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_toLeftOf="@+id/action_btn"
        android:layout_toRightOf="@+id/channel_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/channel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="222"
            android:textColor="@color/s1"
            android:textSize="17.0sp" />

        <TextView
            android:id="@+id/channel_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="222"
            android:textColor="@color/s3"
            android:textSize="11.0sp" />

        <TextView
            android:id="@+id/channel_update_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.0dip"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="222"
            android:textColor="@color/s3"
            android:textSize="11.0sp" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_alignLeft="@+id/channel_icon"
        android:layout_below="@id/channel_text_layout"
        android:layout_marginTop="10.0dip"
        android:background="@color/list_item_divider" />
</RelativeLayout>