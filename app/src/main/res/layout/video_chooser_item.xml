<?xml version="1.0" encoding="utf-8"?>
<com.example.mylibrary.view.indicator.squre.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_item"
        android:paddingRight="2dp"
        android:gravity="right|center_vertical"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

</com.example.mylibrary.view.indicator.squre.SquareFrameLayout>
