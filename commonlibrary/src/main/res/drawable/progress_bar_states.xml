<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />

            <gradient
                android:angle="270"
                android:centerColor="@color/webview_center_bg"
                android:endColor="@color/webview_end_bg"
                android:startColor="@color/webview_start_bg" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" />

                <gradient
                    android:centerColor="@color/webview_center"
                    android:endColor="@color/webview_end"
                    android:startColor="@color/webview_start" />
            </shape>
        </clip>
    </item>

</layer-list>