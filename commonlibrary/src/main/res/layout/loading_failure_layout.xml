<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_failure_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:layoutAnimation="@anim/layout_fade_in"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/loading_failure_img"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:src="@drawable/loading_failure" />

    <TextView
        android:id="@+id/loading_failure_text"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:text="@string/loading_failure"
        android:textColor="@color/no_net2"
        android:textSize="14sp"
        android:layout_height="wrap_content" />
    
    
    <TextView
        android:id="@+id/loading_failure_reload"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:textColor="@drawable/selector_load_failed_text_color"
        android:gravity="center"
        android:background="@drawable/selector_load_failed"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        />

</LinearLayout>